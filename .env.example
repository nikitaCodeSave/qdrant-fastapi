# =============================================================================
# QDRANT SERVICE - Environment Configuration
# =============================================================================
# cp .env.example .env
# =============================================================================

# Application
PROJECT_NAME="Qdrant RAG Service"
VERSION="0.1.0"
ENVIRONMENT=development  # development | staging | production

# API
API_PREFIX="/api/v1"

# Qdrant - Server Mode (Docker)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_PREFER_GRPC=true
QDRANT_TIMEOUT=30.0

# Qdrant - Local Mode (без Docker)
# Если указан — используется embedded mode
QDRANT_LOCAL_PATH=

# Qdrant Defaults
QDRANT_DEFAULT_COLLECTION=documents
QDRANT_VECTOR_SIZE=1024
QDRANT_DISTANCE=Cosine

# =============================================================================
# Examples
# =============================================================================
# Development (local, no Docker):
#   ENVIRONMENT=development
#   QDRANT_LOCAL_PATH=./qdrant_storage
#
# Development (Docker):
#   ENVIRONMENT=development
#   QDRANT_HOST=localhost
#
# Production (Qdrant Cloud):
#   ENVIRONMENT=production
#   QDRANT_HOST=your-cluster.cloud.qdrant.io
#   QDRANT_API_KEY=your-api-key